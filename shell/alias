alias ..='cd ..'
alias ...='cd ../..'
alias grep='grep --color=auto'
alias ls='ls --color=auto'
alias cal3='ncal -b3'
alias make='make -j $(nproc)'
alias quit='exit'
alias rm_all='rm -rfI $(ls -A)'
alias irb='irb --simple-prompt'
alias ocaml='ledit -l $COLUMNS ocaml'
alias curl='curl -s'
alias off='sudo shutdown -h now'
alias reboot='sudo reboot'
alias pm-suspend='sudo pm-suspend'
alias pm-hibernate='sudo pm-hibernate'
alias upd='sudo apt-get update -qq && sudo apt-get dist-upgrade -y'
alias yt='mpv --fullscreen --really-quiet --cache=4000'
alias pause="echo 'Press any key to continue . . .' && read -sk"
alias error='printf "\e[1;37;41m%-*s\e[m\n" $COLUMNS'

